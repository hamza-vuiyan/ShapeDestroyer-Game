<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="Application.controller.gameController">
   <!-- Top Pane with background color -->
   <top>
      <HBox alignment="CENTER" spacing="20" style="-fx-background-color: lightblue; -fx-padding: 10;">
         <Label fx:id="modeLabel" text="Mode: " />
         <Label fx:id="scoreLabel" text="Score: 0" />
      </HBox>
   </top>

   <!-- Center Pane with background color -->
   <center>
      <Pane fx:id="gamePane" prefHeight="700.0" prefWidth="400.0" BorderPane.alignment="CENTER" style="-fx-background-color: lightgreen;" />
   </center>
</BorderPane>
